@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>
<br />
<br />
<form asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="DepartmentCode" class="col-form-label"></label>
        <input asp-for="DepartmentCode" class="form-control" />
        <span asp-validation-for="DepartmentCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentName" class="col-form-label"></label>
        <input asp-for="DepartmentName" class="form-control" />
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>
    <br />
    <br />
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning" />Edit</a>
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

